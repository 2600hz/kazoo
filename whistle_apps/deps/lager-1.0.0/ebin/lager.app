{application,lager,
    [{description,"Erlang logging framework"},
     {vsn,"1.0.0"},
     {modules,
         [error_logger_lager_h,lager,lager_app,lager_console_backend,
          lager_crash_log,lager_file_backend,lager_format,
          lager_handler_watcher,lager_handler_watcher_sup,lager_mochiglobal,
          lager_stdlib,lager_sup,lager_transform,lager_trunc_io,lager_util,
          switchblade_transform]},
     {applications,[kernel,stdlib,compiler,syntax_tools]},
     {registered,[]},
     {mod,{lager_app,[]}},
     {env,
         [{handlers,
              [{lager_console_backend,info},
               {lager_file_backend,[{"log/error.log",error,10485760,"$D0",5}]},
               {lager_syslog_backend,["whistle_apps",local0,debug]}]},
          {crash_log,"log/crash.log"},
          {crash_log_msg_size,65536},
          {crash_log_size,10485760},
          {crash_log_date,"$D0"},
          {crash_log_count,5},
          {error_logger_redirect,true}]}]}.

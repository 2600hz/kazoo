{
    "_id": "_design/transactions",
    "language": "javascript",
    "views": {
        "legacy_total": {
            "map": [
                "function(doc) {",
                "  if (doc.pvt_deleted || (doc.pvt_type !== 'credit' && doc.pvt_type !== 'debit'))",
                "    return;",
                "  var is_credit = doc.pvt_type === 'credit';",
                "  var is_debit  = doc.pvt_type ===  'debit';",
                "  var modifier = is_credit ? 1 : is_debit ? -1 : 0;",
                "  var amount = doc.pvt_amount || 0;",
                "  emit(null, amount * modifier);",
                "}"
            ],
            "reduce": "_sum"
        },
        "list_by_timestamp": {
            "map": [
                "function(doc) {",
                "  if (doc.pvt_deleted || doc.pvt_type !== 'transaction')",
                "    return;",
                "  var amount = doc.amount || 0;",
                "  if (doc.pvt_transaction_type === 'refund')",
                "    amount *= -1;",
                "  emit(doc.pvt_created, {id:doc._id, amount:amount, status: doc.status, executor:doc.executor, description: doc.description, metadata: doc.metadata});",
                "}"
            ]
        }
    }
}

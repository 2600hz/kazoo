{
    "_id": "_design/auth",
    "kazoo": {
        "view_map": [
            {
                "classification": "modb"
            }
        ]
    },
    "language": "javascript",
    "views": {
        "login_attempt_by_auth_module": {
            "map": [
                "function(doc) {",
                "  if (doc.pvt_type != 'login_attempt' || doc.pvt_deleted) return;",
                "  emit([doc.auth_module, doc.pvt_created], {",
                "    'id': doc._id,",
                "    'auth_type': doc.auth_type,",
                "    'auth_module': doc.auth_module,",
                "    'status': doc.status,",
                "    'message': doc.message,",
                "    'timestamp': doc.timestamp,",
                "    'client_ip': doc.client_ip",
                "  });",
                "}"
            ]
        },
        "login_attempt_by_auth_type": {
            "map": [
                "function(doc) {",
                "  if (doc.pvt_type != 'login_attempt' || doc.pvt_deleted) return;",

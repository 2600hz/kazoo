{
    "_id": "_design/services",
    "kazoo": {
        "view_map": [
            {
                "classification": "modb"
            }
        ]
    },
    "language": "javascript",
    "views": {
        "audit_logs_by_creation": {
            "map": [
                "function(doc) {",
                "  if (doc.pvt_deleted || doc.pvt_type != 'audit_log') return;",
                "  emit([doc.pvt_created, doc._id], {",
                "    'id': doc._id,",
                "    'status': doc.status,",
                "    'reason': doc.reason,",
                "    'message': doc.message,",
                "    'type': doc.audit.changes.type,",
                "    'summary': doc.invoice.summary",
                "  });",
                "}"
            ]
        }
    }
}

{
    "_id": "_design/resources",
    "kazoo": {
        "view_map": [
            {
                "classification": "modb"
            }
        ]
    },
    "language": "javascript",
    "views": {
        "jobs_listing": {
            "map": [
                "function(doc) {",
                "  if (doc.pvt_type != 'resource_job' || doc.pvt_deleted) return;",
                "  var failures = 0,",
                "    o = doc.errors || {};",
                "  for (var p in o)",
                "    if (o.hasOwnProperty(p)) failures++;",
                "  var successes = 0,",
                "    o = doc.success || {};",
                "  for (var p in o)",
                "    if (o.hasOwnProperty(p)) successes++;",
                "  emit(doc.pvt_created, {",
                "    'id': doc._id,",
                "    'timestamp': doc.pvt_modified,",
                "    'status': doc.pvt_status,",
                "    'failures': failures,",
                "    'successes': successes,",
                "    'resource_id': doc.resource_id,",
                "    'name': doc.name",
                "  });",
                "}"
            ]
        },
        "status_listing": {
            "map": [
                "function(doc) {",
                "  if (doc.pvt_type != 'resource_job' || doc.pvt_deleted) return;",
                "  emit(doc.pvt_status, null);",
                "}"
            ]
        }
    }
}

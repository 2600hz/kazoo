{
    "_id": "_design/blacklists",
    "kazoo": {
        "view_map": [
            {
                "classification": "account"
            }
        ]
    },
    "language": "javascript",
    "views": {
        "crossbar_listing": {
            "map": "function(doc) { if (doc.pvt_type != 'blacklist' || doc.pvt_deleted) return; emit(doc._id, {'id': doc._id, 'name': doc.name, 'flags': doc.flags || [] }); }"
        },
        "listing_by_number": {
            "map": [
                "function(doc) {",
                "  if (doc.pvt_type != 'blacklist' || doc.pvt_deleted) return;",
                "  for (var num in doc.numbers) {",
                "    if (!doc.numbers.hasOwnProperty(num)) continue;",
                "    emit(num, doc.should_block_anonymous);",
                "  }",
                "}"
            ]
        },
        "should_block_anonymous": {
            "map": [
                "function(doc) {",
                "  if (doc.pvt_type != 'blacklist' || doc.pvt_deleted) return;",
                "  emit(doc.should_block_anonymous);",
                "}"
            ]
        }
    }
}

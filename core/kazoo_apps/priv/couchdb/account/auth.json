{
    "_id": "_design/auth",
    "kazoo": {
        "view_map": [
            {
                "classification": "account"
            }
        ]
    },
    "language": "javascript",
    "views": {
        "providers_by_type": {
            "map": [
                "function(doc) {",
                "  if (doc.pvt_type != 'provider' || doc.pvt_deleted) return;",
                "  emit([doc.pvt_provider_type, doc._id], {",
                "    'id': doc._id,",
                "    'enabled': doc.enabled,",
                "    'name': doc.name,",
                "    'provider_name': doc.provider_name,",
                "    'provider_type': doc.pvt_provider_type",
                "  });",
                "}"
            ]
        }
    }
}

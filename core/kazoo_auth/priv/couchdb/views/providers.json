{
    "_id": "_design/providers",
    "language": "javascript",
    "views": {
        "list_by_account_id": {
            "map": [
                "function(doc) {",
                "  if (doc.pvt_type != 'app' || doc.pvt_deleted )",
                "    return;",
                "  emit([doc.pvt_account_id, doc.pvt_auth_provider], {_id : doc.pvt_auth_provider});",
                "}"
            ],
            "reduce": "_count"
        },
        "list_by_id": {
            "map": [
                "function(doc) {",
                "  if (doc.pvt_type != 'provider' || doc.pvt_provider_type != 'multi_factor' || doc.pvt_deleted )",
                "    return;",
                "  emit(doc._id, {id : doc._id});",
                "}"
            ]
        }
    }
}

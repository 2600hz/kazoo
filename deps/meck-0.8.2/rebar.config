{deps_dir, [".."]}.
%% Compiler Options ===========================================================
{erl_opts, [
    %% Erlang releases after 17 don't put R in front of their name, and also require dict() to be written like dict:dict()
    {platform_define, "^[0-9]+", namespaced_dicts}, 
    warn_export_all,
    warn_export_vars,
    warn_shadow_vars,
    warn_obsolete_guard,
    warn_unused_import,
    warnings_as_errors,
    debug_info
]}.

%% Misc =======================================================================
{clean_files, [".eunit", "ebin/*.beam", "test/*.beam"]}.

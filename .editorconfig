# http://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{erl,erl.src,hrl,hrl.src,escript,edoc,html,text,md,js,json,bash,sh,py,init}]
indent_size = 4

[Makefile]
indent_style = tab

[deps.mk]
indent_style = tab

[*.mk]
indent_style = tab

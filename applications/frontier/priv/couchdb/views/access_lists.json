{
    "_id": "_design/access_lists",
    "kazoo": {
        "view_map": [
            {
                "classification": "account"
            }
        ]
    },
    "language": "javascript",
    "views": {
        "crossbar_listing": {
            "map": [
                "function(doc) {",
                "  if ((doc.pvt_type != 'account' && doc.pvt_type != 'device') || doc.pvt_deleted) return;",
                "  var name = doc.realm || doc.sip.username;",
                "  var type = '';",
                "  if (doc.pvt_type == 'account') type = 'realm';",
                "  else type = 'device';",
                "  if (doc.access_lists) {",
                "    emit(name, {",
                "      'type': type,",
                "      'acls': doc.access_lists",
                "    });",
                "  }",
                "};"
            ]
        }
    }
}

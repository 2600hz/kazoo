{
    "$schema": "http://json-schema.org/draft-03/schema#",
    "_id": "user_auth",
    "description": "Provides an auth-token via user credentials",
    "name": "User Auth",
    "properties": {
        "account_name": {
            "description": "The account name of the user",
            "maxLength": 128,
            "minLength": 1,
            "required": false,
            "type": "string"
        },
        "account_realm": {
            "description": "The account realm of the user",
            "format": "uri",
            "maxLength": 64,
            "minLength": 1,
            "required": false,
            "type": "string"
        },
        "credentials": {
            "description": "A hash of the uses credentials",
            "maxLength": 64,
            "minLength": 1,
            "required": true,
            "type": "string"
        },
        "method": {
            "default": "md5",
            "description": "The hash method",
            "enum": [
                "md5",
                "sha"
            ],
            "required": false,
            "type": "string"
        },
        "phone_number": {
            "description": "A phone number assigned to the users account",
            "maxLength": 64,
            "minLength": 1,
            "required": false,
            "type": "string"
        }
    },
    "required": true,
    "type": "object"
}

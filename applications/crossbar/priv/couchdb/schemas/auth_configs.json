{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "_id": "auth_configs",
    "additionalProperties": true,
    "description": "corssbar authentication modules configurations",
    "properties": {
        "auth_modules": {
            "additionalProperties": true,
            "description": "crossbar authentication modules configurations",
            "properties": {
                "cb_api_auth": {
                    "$ref": "auth_config"
                },
                "cb_user_auth": {
                    "$ref": "auth_config"
                }
            },
            "type": "object"
        }
    },
    "required": [
        "auth_modules"
    ],
    "type": "object"
}

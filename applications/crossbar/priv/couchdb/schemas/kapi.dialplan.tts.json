{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "_id": "kapi.dialplan.tts",
    "description": "AMQP API for dialplan.tts",
    "properties": {
        "Application-Name": {
            "enum": [
                "tts"
            ],
            "type": "string"
        },
        "Call-ID": {
            "type": "string"
        },
        "Conference-ID": {
            "type": "string"
        },
        "Endless-Playback": {
            "type": "boolean"
        },
        "Engine": {
            "type": "string"
        },
        "Event-Category": {
            "enum": [
                "call"
            ],
            "type": "string"
        },
        "Event-Name": {
            "enum": [
                "command"
            ],
            "type": "string"
        },
        "Group-ID": {
            "type": "string"
        },
        "Insert-At": {
            "enum": [
                "head",
                "tail",
                "flush",
                "now"
            ],
            "type": "string"
        },
        "Language": {
            "type": "string"
        },
        "Leg": {
            "type": "string"
        },
        "Loop-Count": {
            "minimum": 1,
            "type": "integer"
        },
        "Terminators": {
            "items": {
                "enum": [
                    "1",
                    "2",
                    "3",
                    "4",
                    "5",
                    "6",
                    "7",
                    "8",
                    "9",
                    "*",
                    "0",
                    "#"
                ],
                "type": "string"
            },
            "type": "array"
        },
        "Text": {
            "type": "string"
        },
        "Voice": {
            "enum": [
                "male",
                "female"
            ],
            "type": "string"
        }
    },
    "required": [
        "Application-Name",
        "Call-ID",
        "Text"
    ],
    "type": "object"
}

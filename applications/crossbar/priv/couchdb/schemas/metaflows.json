{
   "_id":"metaflows"
    ,"id":"http://json-schema.org/draft-03/schema#"
    ,"description":"Actions applied to a call outside of the normal callflow, initiated by the caller(s)"
    ,"properties":{
        "numbers":{
            "description":"A list of static numbers that the metaflow should match for",
            "type":"object",
            "patternProperties":{
                "[0-9]\\*\\#":{
                    "type":"object"
                    ,"properties":{
                        "module":{
                            "type":"string"
                            ,"required":true
                            ,"maxLength":15
                        },
                        "data":{
                            "type":"object"
                            ,"required":true
                            ,"default":{}
                        },
                        "children":{
                            "type":"#/flow"
                            ,"default":{}
                        }
                    }
                }
            }
        }
        ,"patterns":{
            "description":"A list of regular expressions that the callflow should execute for, with optional capture groups",
            "type":"object",
            "patternProperties":{
                "[0-9]\\*\\#":{
                    "type":"object"
                    ,"properties":{
                        "module":{
                            "type":"string"
                            ,"required":true
                            ,"maxLength":15
                        },
                        "data":{
                            "type":"object"
                            ,"required":true
                            ,"default":{}
                        },
                        "children":{
                            "type":"#/flow"
                            ,"default":{}
                        }
                    }
                }
            }
        }
    }
}

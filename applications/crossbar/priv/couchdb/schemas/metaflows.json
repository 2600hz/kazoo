{
    "_id": "metaflows",
    "$schema": "http://json-schema.org/draft-03/schema#",
    "type": "object",
    "required": true,
    "name": "Metaflow",
    "description": "Actions applied to a call outside of the normal callflow, initiated by the caller(s)",
    "properties": {
        "numbers": {
            "type": "object",
            "required": false,
            "name": "Numbers",
            "description": "A list of static numbers that the metaflow should match for",
            "patternProperties": {
                "[0-9\\*\\#]+": {
                    "type": "object",
                    "required": false,
                    "properties": {
                        "module": {
                            "type": "string",
                            "required": true,
                            "name": "Module",
                            "maxLength": 15
                        },
                        "data": {
                            "type": "object",
                            "required": true,
                            "name": "Module Data",
                            "default": {}
                        },
                        "children": {
                            "type": "#/flow",
                            "required": false,
                            "name": "Children",
                            "default": {}
                        }
                    },
                    "patterns": {
                        "type": "object",
                        "required": false,
                        "name": "Patterns",
                        "description": "The metaflow patterns",
                        "itmes": {
                            "type": "string",
                            "required": false
                        }
                    },
                    "binding_digit": {
                        "type": "string",
                        "required": false,
                        "name": "Binding Digit",
                        "description": "What DTMF will trigger the collection and analysis of the subsequent DTMF sequence",
                        "enum": [
                            "1",
                            "2",
                            "3",
                            "4",
                            "5",
                            "6",
                            "7",
                            "8",
                            "9",
                            "0",
                            "*",
                            "#"
                        ],
                        "maxLength": 1,
                        "minLength": 1,
                        "default": "*"
                    },
                    "digit_timeout": {
                        "type": "integer",
                        "required": false,
                        "name": "Timeout (milliseconds)",
                        "description": "How long to wait between DTMF presses before processing the collected sequence",
                        "minimum": 0
                    },
                    "listen_on": {
                        "type": "string",
                        "required": false,
                        "name": "Listen On",
                        "description": "Which leg(s) of the call to listen for DTMF",
                        "enum": [
                            "both",
                            "self",
                            "peer"
                        ]
                    }
                }
            }
        }
    }
}

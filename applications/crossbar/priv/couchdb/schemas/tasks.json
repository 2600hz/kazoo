{
    "$schema": "http://json-schema.org/draft-03/schema#",
    "_id": "tasks",
    "additionalProperties": false,
    "description": "Create a background running task",
    "name": "Task",
    "properties": {
        "arguments": {
            "description": "Ordered list of arguments for the function",
            "items": {
                "description": "Argument",
                "type": "string"
            },
            "minItems": 0,
            "required": true,
            "type": "array"
        },
        "function": {
            "description": "Function name of the module",
            "maxLength": 64,
            "minLength": 1,
            "name": "Function",
            "required": true,
            "type": "string"
        },
        "module": {
            "description": "Erlang module of the task",
            "maxLength": 64,
            "minLength": 1,
            "name": "Module",
            "required": true,
            "type": "string"
        }
    },
    "required": true,
    "type": "object"
}

{
    "_id": "temporal_rules_sets",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": true,
    "name": "Temporal Rule Set",
    "description": "Schema for a temporal rules sets",
    "properties": {
        "name": {
            "type": "string",
            "required": true,
            "name": "Name",
            "description": "A friendly name for the temporal rule set",
            "minLength": 1,
            "maxLength": 128
        },
        "temporal_rules": {
            "type": "array",
            "required": false,
            "name": "Temporal Rules",
            "description": "Rules",
            "minItems":1,
            "items": {
                "type": "string",
                "required": false
            }
        },

    }
}

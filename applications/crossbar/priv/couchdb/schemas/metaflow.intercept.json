{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "_id": "metaflow.intercept",
    "description": "intercept metaflow schema",
    "properties": {
        "auto_answer": {
            "default": false,
            "type": "boolean"
        },
        "target_id": {
            "type": "string"
        },
        "target_type": {
            "enum": [
                "device",
                "user",
                "number"
            ]
        },
        "unbridged_only": {
            "default": true,
            "type": "boolean"
        }
    },
    "required": [
        "target_type",
        "target_id"
    ],
    "type": "object"
}

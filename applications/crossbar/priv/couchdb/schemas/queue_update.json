{
    "$schema": "http://json-schema.org/draft-03/schema#",
    "_id": "queue_update",
    "description": "Schema for queue update request",
    "properties": {
        "action": {
            "description": "Action to perform",
            "enum": [
                "login",
                "logout"
            ],
            "required": true,
            "type": "string"
        },
        "queue_id": {
            "description": "Queue Identifier",
            "maxLength": 128,
            "minLength": 1,
            "required": true,
            "type": "string"
        }
    },
    "required": true,
    "type": "object"
}

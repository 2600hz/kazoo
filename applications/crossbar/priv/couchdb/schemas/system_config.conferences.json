{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "_id": "system_config.conferences",
    "description": "Schema for conferences system_config",
    "definitions" : {
       "conference-profile-settings": {
        "type": "object",
         "properties": {
            "caller-controls": {"type" : "string", "default" : "default"},
            "comfort-noise": {"type" : "integer", "default" : 1000},
            "energy-level": {"type" : "integer", "default" : 20},
            "enter-sound": {"type" : "string", "default" : "tone_stream://v=-7;>=2;+=.1;%(300,0,523,659);v=-7;>=3;+=.1;%(800,0,659,783)"},
            "interval": {"type" : "integer", "default" : 20},
            "moh-sound": {"type" : "string", "default" : "$${hold_music}"},
            "rate": {"type" : "integer", "default" :8000}
            }
            }
    },
    "properties": {
        "bridge_password": {
            "description": "conferences bridge password",
            "type": "string"
        },
        "bridge_username": {
            "description": "conferences bridge username",
            "type": "string"
        },
        "entry_tone": {
            "default": "tone_stream://v=-7;>=2;+=.1;%(300,0,523,659);v=-7;>=3;+=.1;%(800,0,659,783)",
            "description": "conferences entry tone",
            "type": "string"
        },
        "exit_tone": {
            "default": "tone_stream://v=-7;>=2;+=.1;%(300,0,523,440);v=-7;>=3;+=.1;%(800,0,349,440)",
            "description": "conferences exit tone",
            "type": "string"
        },
        "moderator_entry_tone": {
            "default": "tone_stream://v=-7;>=2;+=.1;%(300,0,523,659);v=-7;>=3;+=.1;%(800,0,659,783)",
            "description": "conferences moderator entry tone",
            "type": "string"
        },
        "moderator_exit_tone": {
            "default": "tone_stream://v=-7;>=2;+=.1;%(300,0,523,440);v=-7;>=3;+=.1;%(800,0,349,440)",
            "description": "conferences moderator exit tone",
            "type": "string"
        },
        "number_timeout": {
            "default": 5000,
            "description": "conferences number timeout",
            "type": "integer"
        },
        "pin_timeout": {
            "default": 5000,
            "description": "conferences pin timeout",
            "type": "integer"
        },
        "profiles": {
            "description": "conference profiles",
            "type": "object",
            "default" : {},
            "properties": {
                "default": {
                    "default" : {},
                    "$ref": "#/definitions/conference-profile-settings",
                    "description": "conferences default",
                    "type": "object"
                },
                "page": {
                    "description": "conferences page",
                    "type": "object",
                    "$ref": "#/definitions/conference-profile-settings",
                    "default": {
                            "caller-controls": "default",
                            "comfort-noise": 1000,
                            "energy-level": 20,
                            "enter-sound": "",
                            "interval": 20,
                            "moh-sound": "",
                            "rate": 8000
                    }
                }
            }
        },
        "review_name": {
            "default": false,
            "description": "conferences review name",
            "type": "boolean"
        },
        "route_win_timeout": {
            "default": 3000,
            "description": "conferences route win timeout",
            "type": "integer"
        },
        "support_name_announcement": {
            "default": true,
            "description": "conferences support name announcement",
            "type": "boolean"
        }
    },
    "type": "object"
}

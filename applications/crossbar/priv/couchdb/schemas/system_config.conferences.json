{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "_id": "system_config.conferences",
    "description": "Schema for conferences system_config",
    "properties": {
        "advertise": {
            "properties": {
                "{ConfigName}": {
                    "properties": {
                        "description": "conferences {ConfigName}"
                    }
                }
            }
        },
        "chat-permissions": {
            "properties": {
                "{ConfigName}": {
                    "properties": {
                        "description": "conferences {ConfigName}"
                    }
                }
            }
        },
        "profiles": {
            "properties": {
                "default": {
                    "properties": {
                        "default": {
                            "caller-controls": "default",
                            "comfort-noise": 1000,
                            "energy-level": 20,
                            "enter-sound": "tone_stream://v=-7;>=2;+=.1;%(300,0,523,659);v=-7;>=3;+=.1;%(800,0,659,783)",
                            "interval": 20,
                            "moh-sound": "$${hold_music}",
                            "rate": 8000
                        },
                        "description": "conferences default",
                        "type": "object"
                    }
                },
                "page": {
                    "properties": {
                        "default": {
                            "caller-controls": "default",
                            "comfort-noise": 1000,
                            "energy-level": 20,
                            "enter-sound": "",
                            "interval": 20,
                            "moh-sound": "",
                            "rate": 8000
                        },
                        "description": "conferences page",
                        "type": "object"
                    }
                }
            }
        },
        "review_name": {
            "default": false,
            "description": "conferences review name",
            "type": "boolean"
        },
        "route_win_timeout": {
            "default": 3000,
            "description": "conferences route win timeout",
            "type": "integer"
        }
    },
    "required": [
        "advertise",
        "chat-permissions",
        "profiles"
    ],
    "type": "object"
}

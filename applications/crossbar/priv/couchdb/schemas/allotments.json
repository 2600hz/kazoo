{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "_id": "allotments",
    "description": "Create buckets of minutes per time-period",
    "patternProperties": {
        "^\\w+$": {
            "properties": {
                "amount": {
                    "minimum": 0,
                    "type": "integer"
                },
                "cycle": {
                    "enum": [
                        "minutely",
                        "hourly",
                        "daily",
                        "weekly",
                        "monthly"
                    ],
                    "type": "string"
                },
                "group_consume": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "increment": {
                    "minimum": 1,
                    "type": "integer"
                },
                "minimum": {
                    "minimum": 0,
                    "type": "integer"
                },
                "no_consume_time": {
                    "minimum": 0,
                    "type": "integer"
                }
            },
            "required": [
                "amount",
                "cycle"
            ],
            "type": "object"
        }
    },
    "type": "object"
}

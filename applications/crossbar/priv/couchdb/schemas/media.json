                        "de-DE-Standard-A",
                        "de-DE-Standard-B",
                        "en-AU-Standard-A",
                        "en-AU-Standard-B",
                        "en-AU-Standard-C",
                        "en-AU-Standard-D",
                        "fr-CA-Standard-A",
                        "fr-CA-Standard-B",
                        "fr-CA-Standard-C",
                        "fr-CA-Standard-D",
                        "fr-FR-Standard-A",
                        "fr-FR-Standard-B",
                        "fr-FR-Standard-C",
                        "fr-FR-Standard-D"
                    ],
                    "support_level": "supported",
                    "type": "string"
                }
            },
            "support_level": "supported",
            "type": "object"
        }
    },
    "required": [
        "media_source",
        "name"
    ],
    "type": "object"
}

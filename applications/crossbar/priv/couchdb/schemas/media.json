{
    "_id": "media",
    "$schema": "http://json-schema.org/draft-03/schema#",
    "type": "object",
    "required": true,
    "name": "Media",
    "description": "Schema for media",
    "properties": {
        "name": {
            "type": "string",
            "required": true,
            "name": "Name",
            "description": "A friendly name for the media",
            "minLength": 1,
            "maxLength": 128
        },
        "description": {
            "type": "string",
            "required": false,
            "name": "Description",
            "description": "A breif description of the media update, usally the original file name",
            "minLength": 1,
            "maxLength": 128
        },
        "language": {
            "type": "string",
            "required": false,
            "name": "Language",
            "description": "The language of the media file or text",
            "default":"en-us"
        },
        "prompt_id": {
            "type": "string",
            "required": false,
            "name": "Prompt ID",
            "description": "The prompt this media file represents"
        },
        "tts": {
            "type": "object",
            "required": false,
            "name": "TTS Parameters",
            "description": "Text-to-speech options used to create audio files from text",
            "properties": {
                "text": {
                    "type": "string",
                    "required": false,
                    "name": "Text TTS",
                    "description": "The text to be converted into audio",
                    "minLength": 1
                },
                "voice": {
                    "type": "string",
                    "required": false,
                    "name": "Voice TTS",
                    "description": "The voice to be used during the conversion",
                    "enum": [
                        "female/en-US",
                        "male/en-US",
                        "female/en-CA",
                        "female/en-AU",
                        "female/en-GB",
                        "male/en-GB",
                        "female/es-US",
                        "male/es-US",
                        "female/us-US",
                        "female/zh-CN",
                        "male/zh-CN",
                        "female/zh-HK",
                        "female/zh-TW",
                        "female/ja-JP",
                        "male/ja-JP",
                        "female/ko-KR",
                        "male/ko-KR",
                        "female/da-DK",
                        "female/de-DE",
                        "male/de-DE",
                        "female/ca-ES",
                        "female/es-ES",
                        "male/es-ES",
                        "female/fi-FI",
                        "female/fr-CA",
                        "male/fr-CA",
                        "female/fr-FR",
                        "male/fr-FR",
                        "female/it-IT",
                        "male/it-IT",
                        "female/nb-NO",
                        "female/nl-NL",
                        "female/pl-PL",
                        "female/pt-BR",
                        "female/pt-PT",
                        "male/pt-PT",
                        "female/ru-RU",
                        "male/ru-RU",
                        "female/sv-SE",
                        "female/hu-HU",
                        "female/cs-CZ",
                        "female/tr-TR",
                        "male/tr-TR"
                    ],
                    "default": "female/en-US"
                }
            },
            "default": {}
        },
        "content_length": {
            "type": "integer",
            "required": false,
            "name": "Content Length",
            "description": "Length, in bytes, of the file",
            "minimum": 1,
            "maximum": 5242880
        },
        "content_type": {
            "type": "string",
            "required": false,
            "name": "Content Type",
            "description": "Used to override the automatic upload type",
            "enum": [
                "audio/mp3",
                "audio/mpeg",
                "audio/mpeg3",
                "audio/x-wav",
                "audio/wav",
                "audio/ogg"
            ]
        },
        "media_source": {
            "type": "string",
            "required": false,
            "name": "Media Source",
            "description": "Defines the source of the media",
            "enum": [
                "recording",
                "upload",
                "tts"
            ],
            "default": "upload"
        },
        "source_type": {
            "type": "string",
            "required": false,
            "name": "Source Type",
            "description": "If the media was generated from a callflow module, this is the module name"
        },
        "source_id": {
            "type": "string",
            "required": false,
            "name": "Source ID",
            "description": "If the media was generated from a callflow module, this is ID of the properties",
            "minLength": 32,
            "maxLength": 32
        },
        "streamable": {
            "type": "boolean",
            "required": false,
            "name": "Streamable",
            "description": "Determines if the media can be streamed",
            "default": true
        }
    }
}

{
    "_id": "_design/auth",
    "language": "javascript",
    "views": {
        "providers_by_type": {
            "map": [
                "function(doc) {",
                "  if (doc.pvt_type != 'auth_provider' || doc.pvt_deleted)",
                "    return;",
                "  emit([doc.provider_type, doc._id], {",
                "    'id': doc._id,",
                "    'provider_name': doc.provider_name,",
                "    'provider_type': doc.pvt_provider_type,",
                "    'enabled': doc.enabled }",
                "    );",
                "}"
            ]
        }
    }
}

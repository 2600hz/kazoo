{application, ecallmgr
 ,[
   {description, "Manage resource requests and interface with FreeSWITCH"}
   ,{id, "59d9f698-62d6-4be6-937c-e8a2647c9a07"}
   ,{vsn, "0.8.4"}
   ,{modules, []}
   ,{registered, []}
   ,{applications, [
                    kernel
                    ,stdlib
                   ]}
   ,{included_applications, [
                             crypto
                             ,sasl
                             ,lager
                             ,whistle_amqp
                            ]}
   ,{mod, {ecallmgr_app, []}}
   ,{env, [{reloader, false}]}
   ,{lager, [
             {handlers, [
                         {lager_console_backend, info}

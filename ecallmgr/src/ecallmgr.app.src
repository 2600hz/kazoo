                                                {"error.log", error, 10485760, "$D0", 5}
                                                ,{"console.log", info, 10485760, "$D0", 5}
                                               ]}
                         ,{lager_syslog_backend, ["ecallmgr", local0, info]}
                         ,{lager_syslog_backend, ["ecallmgr", local1, error]}
                        ]}
            ]
    }
]}.
